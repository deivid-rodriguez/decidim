<main class="wrapper">
  <div class="row">
    <div class="columns">
      <div class="title-action" >
        <h1 class="heading1 title-action__title">
          <%= t(".title") %>
        </h1>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="columns mediumlarge-12 large-12">
      <% if @chats.empty? %>
        <div class="callout secondary">
          <p><%= t(".no_chats") %></p>
        </div>
      <% else %>
        <ul class="chats">
          <% Decidim::Messaging::ChatPresenter.for_collection(@chats).each do |chat| %>
            <li>
              <div><%= chat.interlocutors_for(current_user) %></div>
              <div><%= truncate chat.last_message, length: 150 %>
              <div><%= l(chat.last_update, format: :long) %>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</main>
